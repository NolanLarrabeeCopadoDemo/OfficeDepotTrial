<aura:component controller="OrgHierarchyDetailsController" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">   
<ltng:require styles="{!$Resource.popupCSS}" />

    
    <aura:handler name="init" value="{!this}" action="{!c.doAction}" />  
    
    <aura:method name="reInitCase" action="{!c.doAction}" description="Runs the init method again ">
        <aura:attribute name="param1" type="String"/>
    </aura:method>
    
        <aura:attribute name="subrecordId" type="String" access="global"/>

    <aura:attribute name="caseColumns" type="List"/>
    <aura:attribute name="caseList" type="Case" />
    <aura:attribute name="countCase" type="String" />
    <aura:attribute name="recentCase" type="Case" />
    <aura:attribute name="showCaseInfo" type="boolean" default="false"/>
        
    <aura:attribute name="currentIdRec" type="String"/>   
    
    <aura:attribute name="currentId" type="String"/>   
    <aura:attribute name="accountId" type="Id"/>
    <aura:attribute name="isAccountOrOrg" type="boolean"/>
    <aura:attribute name="showModel" type="boolean" default="false"/>
    
    
        <ul class="slds-has-dividers_around-space slds-p-around_x-small" style="width:215px; float:left;margin-left: 3px;">
            <li class="slds-item" style ="background-color: rgb(240, 242, 218); ">
                <article class="slds-tile slds-tile_board">
                    <h3 class="slds-tile__title slds-truncate" title="Number Of Cases"><a href="javascript:void(0);">Cases</a></h3>
                    <div class="slds-tile__detail">
                        <p class="slds-text-heading_medium">{!v.countCase}</p>
                        <p class="slds-truncate" title="Recent Case"><a href="javascript:void(0);">Recent Case</a></p>
                        <p class="slds-truncate" title="Recent Case">
                             <aura:if isTrue="{!and(v.recentCase.CaseNumber != null, v.recentCase.CaseNumber != '')}">{!v.recentCase.CaseNumber}
                                <aura:set attribute="else">No Data </aura:set>
                            </aura:if>
                        </p>
                    </div>
                    
                    <h3 class="slds-tile__title slds-truncate" title="Show More Details"><a href="javascript:void(0);" onclick="{!c.showCases}">Show More Details</a></h3>
                </article>
            </li>
        </ul>
        
        
        
        <aura:if isTrue="{!v.showModel}">
        <div class="demo-only" style="height: 640px;">
            
            <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true" aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
                <div class="slds-modal__container"      >
                    <header class="slds-modal__header">
                        <button class="slds-button slds-modal__close slds-button--icon-inverse" title="Close" onclick="{!c.closeModel}">
                            X
                            <span class="slds-assistive-text">Close</span>
                        </button>
                        <h2 id="modal-heading-01" class="slds-text-heading_medium slds-hyphenate">
                            
                            <aura:if isTrue="{!v.showCaseInfo}"> Case Information</aura:if>
                        </h2>
                    </header>
                    
                    <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-Case">
                        <aura:if isTrue="{!v.showCaseInfo}">
                            <div style="background-color:white; width:100%; padding: 10px; font-weight: 900;"> 
                                <div style="height:130px;width:1200px;">
                                    <lightning:datatable data="{! v.caseList }"
                                                         columns="{! v.caseColumns }"
                                                         keyField="Id" hideCheckboxColumn="true" />  
                                </div>
                            </div>
                        </aura:if>
                    </div>
                    
                    <footer class="slds-modal__footer">
                        <button class="slds-button slds-button_neutral" onclick="{!c.closeModel}">Cancel</button>
                    </footer>
                    
                </div>
            </section>
            <div class="slds-backdrop slds-backdrop_open"></div>
        </div>
            </aura:if>
    
    
</aura:component>