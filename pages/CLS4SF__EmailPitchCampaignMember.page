<apex:page standardController="Campaign" extensions="CLS4SF.CampaignUtils" showHeader="false" sidebar="false">
<META HTTP-EQUIV="Content-type" CONTENT="text/html; charset=UTF-8">
<script type="text/javascript">
    window.onload=function(){
        document.getElementById("cspost").submit();
        };
</script>
    <form name="cspost" id="cspost" action="{!postURL}/manage/email/external_link_post" method="POST">
<input  id="crmid" name="crmid" value="crm://salesforce.com/campaign/{!Campaign.Id}" type="hidden" />
<input  id="email" name="email" value="{!emails}" type="hidden" />
<input  id="company" name="company" value="{!Campaign.name}" type="hidden" />
<input  id="csrf_token" name="csrf_token" value="{!csrf}" type="hidden" />
</form>
</META>
</apex:page>